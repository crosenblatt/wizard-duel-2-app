<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLoginBlue"
    android:backgroundTint="@color/colorLoginBlue">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/username_textedit"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:padding="@dimen/margin"
            android:autofillHints="@string/enter_user"
            android:ems="10"
            android:hint="@string/enter_user"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/password_textedit"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username_textedit"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/margin"
            android:autofillHints="@string/enter_pass"
            android:ems="10"
            android:hint="@string/enter_pass"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/login_button"
            android:layout_width="270dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/password_textedit"
            android:background="@drawable/rounded_button"
            android:fadingEdge="horizontal|vertical"
            android:text="@string/login"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/guest_button"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_below="@+id/login_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_button"
            android:text="@string/play_guest"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/create_account_button"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_below="@+id/guest_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_button"
            android:fadingEdge="horizontal|vertical"
            android:text="@string/create_acct"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/reset_pass_button"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_below="@+id/create_account_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_button"
            android:text="@string/forgot_pass"
            android:textColor="@color/white"/>


    </RelativeLayout>



</android.support.constraint.ConstraintLayout>