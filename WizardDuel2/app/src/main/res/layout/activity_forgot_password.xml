<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@color/colorLoginBlue"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/enter_username_textveiw"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginTop="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="@string/enter_user" />

        <EditText
            android:id="@+id/enter_username_edittext"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/enter_username_textveiw"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/NULL_STRING" />

        <TextView
            android:id="@+id/enter_email_textview"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginTop="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/enter_username_edittext"
            android:text="@string/new_email" />

        <EditText
            android:id="@+id/enter_email_edittext"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/enter_email_textview"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/NULL_STRING" />

        <Button
            android:id="@+id/reset_pass_button"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginTop="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:background="@drawable/rounded_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/enter_email_edittext"
            android:text="Get Temporary Password" />

        <Button
            android:id="@+id/cancel_button"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginTop="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:background="@drawable/rounded_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reset_pass_button"
            android:text="@string/cancel" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>