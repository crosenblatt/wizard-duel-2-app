<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:id="@+id/spell_card_parent"
    android:background="@drawable/spell_card_background"
    android:layout_marginTop="5dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="5dp">

    <TextView
        android:id="@+id/spell_name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spell Name"
        android:textSize="20sp"
        android:textColor="#000"/>
    <TextView
        android:id="@+id/spell_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spell_name_textView"
        android:text="Temporary description of the spell's abilities."
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        />

</RelativeLayout>